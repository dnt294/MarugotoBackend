$('.error_section').empty()
<% if @new_word.errors.any? %>
    $('.error_section').append("<%= j render(partial: 'shared/error_form', locals: {item: @new_word}) %>")
<% else %>
    $("#new-word-list").html("<%= j render 'index' %>")
    $('#right-half-panel').empty().append('<%= j render 'new' %>')    
<% end %>