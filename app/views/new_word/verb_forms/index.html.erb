<p id="notice"><%= notice %></p>

<h1>New Word Verb Forms</h1>

<table>
  <thead>
    <tr>
      <th>Verb type</th>
      <th>Dictionary form</th>
      <th>Nai form</th>
      <th>Te form</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @new_word_verb_forms.each do |new_word_verb_form| %>
      <tr>
        <td><%= new_word_verb_form.verb_type %></td>
        <td><%= new_word_verb_form.dictionary_form %></td>
        <td><%= new_word_verb_form.nai_form %></td>
        <td><%= new_word_verb_form.te_form %></td>
        <td><%= link_to 'Show', new_word_verb_form %></td>
        <td><%= link_to 'Edit', edit_new_word_verb_form_path(new_word_verb_form) %></td>
        <td><%= link_to 'Destroy', new_word_verb_form, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New New Word Verb Form', new_new_word_verb_form_path %>
