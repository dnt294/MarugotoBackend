<!DOCTYPE html>
<html>
    <head>
        <title>MarugotoBackend</title>
        <%= csrf_meta_tags %>
        <%= javascript_include_tag 'application' %>
        <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <% unless devise_controller? %>
            <%= stylesheet_link_tag controller_name, 'data-turbolinks-track': 'reload' %>
        <% end %>
    </head>
    <body>
        <%= render 'shared/header' %>
        <div class="main-body">
            <%= yield %>
        </div>
    </body>
</html>