<p id="notice"><%= notice %></p>

<h1>Kanjis</h1>

<table>
  <thead>
    <tr>
      <th>Kanji</th>
      <th>Meaning</th>
      <th>Onyomi</th>
      <th>Kunyomi</th>
      <th>Hint</th>
      <th>Image</th>
      <th>Kanji part</th>
      <th>Lesson</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kanjis.each do |kanji| %>
      <tr>
        <td><%= kanji.kanji %></td>
        <td><%= kanji.meaning %></td>
        <td><%= kanji.onyomi %></td>
        <td><%= kanji.kunyomi %></td>
        <td><%= kanji.hint %></td>
        <td><%= kanji.image %></td>
        <td><%= kanji.kanji_part %></td>
        <td><%= kanji.lesson %></td>
        <td><%= link_to 'Show', kanji %></td>
        <td><%= link_to 'Edit', edit_kanji_path(kanji) %></td>
        <td><%= link_to 'Destroy', kanji, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

