<div class="ui container">
    <p id="notice"><%= notice %></p>
    <h1>512 Kanji</h1>
    <%= link_to 'New Kanji', new_kanji_path %>
    <table class="ui celled padded striped table">
        <thead>
            <tr>
                <th>Kanji</th>
                <th>Meaning</th>
                <th>Lesson</th>
            </tr>
        </thead>
        <tbody>
            <% @kanjis.each do |kanji| %>
                <%= render 'kanji_short', kanji: kanji %>
            <% end %>
        </tbody>
    </table>
    <br>
</div>