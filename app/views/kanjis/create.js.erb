$('.error_section').empty()
<% if @kanji.errors.any? %>
    $('.error_section').append("<%= j render(partial: 'shared/error_form', locals: {item: @kanji}) %>")
<% else %>
    $("#kanjis-tab").html("<%= j render 'kanjis_tempo_list', kanjis: @kanjis %>")
    $('#form-tab').empty().append("<%= j render 'form', kanji: @kanji %>")    
<% end %>